@model IEnumerable<ArizonaSignCompany.Models.Lift_Schedule>

@{
    ViewBag.Title = "Index";
}

<h2>Lift Schedule</h2>

<table class="table">
    <tr>
        <th>
            Date
        </th>
        <th>
            Location
        </th>
        <th>
            Start Time
        </th>
        <th>
            End Time
        </th>
        <th>
            Contact
        </th>
        <th>
            Last Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Lift_Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Lift_Location)
    </td>
    <td>
        @((DateTime.Today+item.start_time).ToString("h:mm tt"))
    </td>
    <td>
        @((DateTime.Today+item.end_time).ToString("h:mm tt"))
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Lift_Contact)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Customer_Information.LastName)
    </td>
    <td>
        @Html.ActionLink("Create", "Create", new { id = item.lift_Id }) |
        @Html.ActionLink("Edit", "Edit", new { id = item.lift_Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.lift_Id })
    </td>
</tr>
}

</table>
