<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Arizona Sign Company</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.1.0/fullcalendar.print.min.css' rel='stylesheet' media='print' />
    @if (ViewBag.HasCalendar == true)
    {
        <link href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.1.0/fullcalendar.min.css" rel="stylesheet" />
        <link href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.7/semantic.min.css" rel="stylesheet" />

    }
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Eleganter - New Amazing HTML5 Template</title>
    <link rel="stylesheet" href="~/css/components.css">
    <link rel="stylesheet" href="~/css/icons.css">
    <link rel="stylesheet" href="~/css/responsee.css">
    <link rel="stylesheet" href="~/owl-carousel/owl.carousel.css">
    <link rel="stylesheet" href="~/owl-carousel/owl.theme.css">
    <link rel="stylesheet" href="~/css/template-style.css">
    <link href='https://fonts.googleapis.com/css?family=Playfair+Display&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,700,800&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    @*<script type="text/javascript" src="~/js/jquery-1.8.3.min.js"></script>*@
    @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript" src="~/js/jquery-ui.min.js"></script>
</head>

<body class="size-1140">
    @RenderBody()
    <!-- HEADER -->
    <header role="banner" class="position-absolute">
        <!-- Top Navigation -->
        <nav class="background-transparent background-transparent-hightlight full-width fixed">
            <div class="s-12 l-2">
                <div class="margin-top-10 text-l-size-20">Arizona Sign Company</div>
                <!--<a href="index.html" class="logo">-->
                    <!-- Logo White Version -->
                    <!--<img class="logo-white" src="~/img/logo.png" alt="">-->
                    <!-- Logo Dark Version -->
                    <!--<img class="logo-dark" src="~/img/logo-dark.png" alt="">
                </a>-->
            </div>
            <div class="top-nav s-12 l-10 text-dark">
                <p class="nav-text"></p>
                <ul class="right chevron">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    <li>@Html.ActionLink("Request Crane Lift", "Create", "LiftSchedule")</li>
                    <li>
                        <a>Services</a>
                        <ul>
                            <li>
                                <a>@Html.ActionLink("Sign Manufacturing - Quotes", "Create", "Quote")</a>
                                @*<ul>
                                        <li>@Html.ActionLink("Sign Manufacturing - Quotes", "Create", "Quote")</li>
                                        <li><a>Service 1 B</a></li>
                                    </ul>*@
                            </li>
                            <li>@Html.ActionLink("Sign Installation", "Create", "Installation")</li>
                            <li>@Html.ActionLink("Serivce Request", "Create", "ServiceRequest")</li>
                            <li>@Html.ActionLink("Request a Repair", "Create", "RepairRequests")</li>
                            <li>@Html.ActionLink("Request for Information", "Create", "RequestForInformation")</li>
                            <li>@Html.ActionLink("LED Replacement Lighting", "Lighting", "Home")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Dashboard", "Index", "Dashboard")</li>
                    }

                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </nav>
        @Scripts.Render("~/bundles/bootstrap")
        @if (ViewBag.HasCalendar == true)
        {
            <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.7/semantic.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.1/moment.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.1.0/fullcalendar.min.js"></script>
            <script src="~/Scripts/Calendar.js"></script>
        }
        @RenderSection("scripts", required: false)
    </header>
    <script type="text/javascript" src="~/js/responsee.js"></script>
    <script type="text/javascript" src="~/owl-carousel/owl.carousel.js"></script>
    <script type="text/javascript" src="~/js/template-scripts.js"></script>
