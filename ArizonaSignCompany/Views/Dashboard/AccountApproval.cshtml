@using ArizonaSignCompany.Models;
@model IEnumerable<ArizonaSignCompany.Models.Customer_Information>

@{
    var tableName = "account";
    var sortColumn = ViewBag.sortColumn;
    var sortDirection = ViewBag.sortDirection ?? false;
    var sortIconClass = "glyphicon-sort-by-attributes";
    if (ViewBag.sortDirection == true)
    {
        sortIconClass = "glyphicon-sort-by-attributes-alt";
    }
    ViewBag.Title = "Index";
    string newSortDirection = (!sortDirection).ToString();
}

<h2>Pending Accounts</h2>

<table class="table">
    <tr>
        <th>
            <a href="javascript: applysort('@tableName','@customer_informationColumnName.firstname', '@newSortDirection')">
                First Name
                <span class="glyphicon @(sortColumn == customer_informationColumnName.firstname ? sortIconClass : "glyphicon-sort")" aria-hidden="true"></span>
            </a>
        </th>
        <th>
            <a href="javascript: applysort('@tableName','@customer_informationColumnName.lastname', '@newSortDirection')">
                Last Name
                <span class="glyphicon @(sortColumn == customer_informationColumnName.lastname ? sortIconClass : "glyphicon-sort")" aria-hidden="true"></span>
            </a>
        </th>
        <th>
            <a href="javascript: applysort('@tableName','@customer_informationColumnName.company', '@newSortDirection')">
                Company
                <span class="glyphicon @(sortColumn == customer_informationColumnName.company ? sortIconClass : "glyphicon-sort")" aria-hidden="true"></span>
            </a>
        </th>
        <th>
            Address
        </th>
        <th>
            City
        </th>
        <th>
            State
        </th>
        <th>
            Zip
        </th>
        <th>
            Phone
        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("View", "ApproveAccount", new { id = item.Customer_ID })
            </td>
        </tr>
    }

</table>
