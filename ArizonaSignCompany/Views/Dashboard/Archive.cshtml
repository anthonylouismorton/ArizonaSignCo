@using ArizonaSignCompany.Models;
@model IEnumerable<ArizonaSignCompany.Models.Request>

@{
    var sortColumn = ViewBag.sortColumn;
    var sortDirection = ViewBag.sortDirection ?? false;
    var sortIconClass = "glyphicon-sort-by-attributes";
    if (ViewBag.sortDirection == true)
    {
        sortIconClass = "glyphicon-sort-by-attributes-alt";
    }
    ViewBag.Title = "Index";
    string newSortDirection = (!sortDirection).ToString();
}

<h2>Archive</h2>

<table class="table">
    <tr>
        <th>
            <a href="@Url.Action("Archive","Dashboard", new {sortColumn = requestColumnName.firstname, sortDirection = newSortDirection})">
                First Name
                <span class="glyphicon @(sortColumn == requestColumnName.firstname ? sortIconClass : "glyphicon-sort")" aria-hidden="true"></span>
            </a>
        </th>

        <th>
            <a href="@Url.Action("Archive","Dashboard", new {sortColumn = requestColumnName.lastname, sortDirection = newSortDirection})">
                Last Name
                <span class="glyphicon @(sortColumn == requestColumnName.lastname ? sortIconClass : "glyphicon-sort")" aria-hidden="true"></span>
            </a>
        </th>
        <th>
            <a href="@Url.Action("Archive","Dashboard", new {sortColumn = requestColumnName.type, sortDirection = newSortDirection})">
                Type
                <span class="glyphicon @(sortColumn == requestColumnName.type ? sortIconClass : "glyphicon-sort")" aria-hidden="true"></span>
            </a>
        </th>

        <th>
            @Html.DisplayNameFor(model => model.attachment)
        </th>
        <th>
            <a href="@Url.Action("Archive","Dashboard", new {sortColumn = requestColumnName.contact, sortDirection = newSortDirection})">
                Contact
                <span class="glyphicon @(sortColumn == requestColumnName.contact ? sortIconClass : "glyphicon-sort")" aria-hidden="true"></span>
            </a>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.location)
        </th>
        <th>
            <a href="@Url.Action("Archive","Dashboard", new {sortColumn = requestColumnName.company, sortDirection = newSortDirection})">
                Company
                <span class="glyphicon @(sortColumn == requestColumnName.company ? sortIconClass : "glyphicon-sort")" aria-hidden="true"></span>
            </a>
        </th>
        <th>
            Click Details for Comments
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.first_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.last_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.attachment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.company)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Request_number }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Request_number })
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Back to Dashboard", "Index", "Dashboard")
</div>
