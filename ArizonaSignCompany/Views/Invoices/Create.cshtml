@model ArizonaSignCompany.Models.Invoice

@{
    ViewBag.Title = "Create";
}

<h2>Create New Invoice</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.total)
    @Html.HiddenFor(model => model.description)

    <div class="form-group">
        @Html.LabelFor(model => model.Customer_ID, "Select Customer", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Customer_ID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Customer_ID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Customer List", "Index","Customer_Information")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
