@model IEnumerable<ArizonaSignCompany.Models.InvoiceLineItem>

@{
    ViewBag.Title = "Index";
}
<p>
    @Html.ActionLink("Add New Line Item", "Create",new {id=ViewBag.invoiceid})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cost)
        </th>
        <th>
            Tax Rate
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.cost)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.taxPercent)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.LineItem_ID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.LineItem_ID })
    </td>
</tr>
}

</table>
